<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juanlucena.sdos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.SDOS"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="sdos_app.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />

        <activity android:name=".loginScreen.LoginActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".webserviceScreen.WebserviceActivity"/>
        <activity android:name=".addTaskScreen.AddTaskActivity" />
        <activity android:name=".taskListScreen.TaskListActivity"/>

        <service
            android:name=".services.InitializeDBService"
            android:exported="false" />


    </application>

</manifest>